# Erik-VPN Configuration
# Скопируйте в .env и настройте под себя: cp env.example .env

# =============================================================================
# ОСНОВНЫЕ НАСТРОЙКИ
# =============================================================================

# IP адрес или домен вашего VPS (ОБЯЗАТЕЛЬНО!)
SERVER_HOST=your-vps-ip-here

# Часовой пояс
TZ=Europe/Moscow

# =============================================================================
# 3X-UI ПАНЕЛЬ УПРАВЛЕНИЯ
# =============================================================================

# Порт веб-панели (по умолчанию 2053)
PANEL_PORT=2053

# ВНУТРЕННИЙ порт панели внутри контейнера (по умолчанию 2053)
# Обычно НЕ НУЖНО трогать. Меняйте только если вы уже сменили порт в UI и потеряли доступ,
# и в логах видите строку вроде: "Web server running HTTP on [::]:37428"
PANEL_CONTAINER_PORT=2053

# Логин и пароль администратора (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeThisPassword123!

# =============================================================================
# ПОРТЫ ПРОТОКОЛОВ
# =============================================================================

# VLESS + Reality (основной протокол, порт 443)
VLESS_REALITY_PORT=443

# VLESS + XHTTP (резервный протокол, порт 8080)
VLESS_XHTTP_PORT=8080

# =============================================================================
# VLESS + REALITY НАСТРОЙКИ
# =============================================================================

# Домен для маскировки Reality
# Рекомендуемые: microsoft.com, apple.com, cloudflare.com
REALITY_SNI=microsoft.com

# =============================================================================
# БЕЗОПАСНОСТЬ
# =============================================================================

# ⚠️  ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ ADMIN_PASSWORD перед запуском!
# Используйте сложный пароль: буквы, цифры, символы

# =============================================================================
# ПРИМЕЧАНИЯ
# =============================================================================

# После изменения .env перезапустите контейнер:
# docker-compose down && docker-compose up -d

# Доступ к панели управления:
# http://YOUR_VPS_IP:2053
