# =================================================================
# ERIK-VPN CONFIGURATION FILE
# =================================================================
# Скопируйте этот файл в .env и настройте под ваши нужды

# =================================================================
# ОСНОВНЫЕ НАСТРОЙКИ СЕРВЕРА
# =================================================================

# IP-адрес или домен вашего сервера (ОБЯЗАТЕЛЬНО!)
# Например: 192.168.1.100 или vpn.yourdomain.com
WG_HOST=your-server-ip

# Пароль для доступа к веб-интерфейсу (ОБЯЗАТЕЛЬНО ИЗМЕНИТЬ!)
ADMIN_PASSWORD=your-secure-password

# =================================================================
# НАСТРОЙКИ WIREGUARD
# =================================================================

# Порт WireGuard (UDP)
WG_PORT=51820

# Порт веб-интерфейса
WEB_PORT=51821

# Подсеть для VPN клиентов
WG_DEFAULT_ADDRESS=10.8.0.x

# DNS серверы для клиентов (через запятую)
WG_DEFAULT_DNS=1.1.1.1,8.8.8.8

# Разрешенные IP для клиентов (0.0.0.0/0 = весь трафик через VPN)
WG_ALLOWED_IPS=0.0.0.0/0

# =================================================================
# НАСТРОЙКИ МОНИТОРИНГА (ОПЦИОНАЛЬНО)
# =================================================================

# Включить мониторинг (true/false)
ENABLE_MONITORING=false

# Пароль для Grafana
GRAFANA_PASSWORD=admin

# =================================================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# =================================================================

# Максимальное количество клиентов
MAX_CLIENTS=50

# Логирование (true/false)
ENABLE_LOGGING=true

# Автоматические обновления (true/false)
AUTO_UPDATE=true

# Уровень логирования (debug/info/warn/error)
LOG_LEVEL=info
